<project name="OpenSCADA OPC" default="default">
    <description>
            The OpenSCADA OPC Build File - Project Utgard
    </description>

	<property name="version" value="0.1.0"/>
	<property name="release" value=""/>
	<property name="upload.base" value="/var/vhosts/openscada/download/utgard"/>
	<property name="upload.dir" value="${upload.base}/${version}"/>
	<property name="source.base" value="../.."/>
	<property name="external.base" value="../../external"/>
	<property name="api.href.dir" value="${api.href.base}/${version}/api"/>
	
    <!-- ================================= 
          target: default              
         ================================= -->
    <target name="default" depends="init" description="--> The OpenSCADA OPC Build File - Project Utgard">
    	<ant dir="${source.base}/opc/dcom"/>
    	<ant dir="${source.base}/opc/lib"/>
    </target>

    <!-- - - - - - - - - - - - - - - - - - 
          target: init                      
         - - - - - - - - - - - - - - - - - -->
    <target name="init" depends="clean">
    	<tstamp/>
    </target>
	
	<!-- - - - - - - - - - - - - - - - - - 
          target: clean                      
         - - - - - - - - - - - - - - - - - -->
    <target name="clean">
            <delete dir="${upload.dir}"/>
    </target>


</project>
